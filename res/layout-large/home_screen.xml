<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/liveImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical" >

        <cut.ac.cy.my_tour_guide.camera.Preview
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </cut.ac.cy.my_tour_guide.camera.Preview>

        <RelativeLayout
            android:id="@+id/zoomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp" >

            <SeekBar
                android:id="@+id/zoombar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/zoombarText"
                android:max="100"
                android:progress="50" >
            </SeekBar>

            <TextView
                android:id="@+id/zoombarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/zoombar"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageViewMenu"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF" />

             <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/zoombar"
                android:layout_alignParentRight="true"
                android:src="@drawable/menu" />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/layoutCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="20dp"
            android:paddingRight="10dp">"

            <ImageView
                android:id="@+id/imageViewCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/camera" />

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>